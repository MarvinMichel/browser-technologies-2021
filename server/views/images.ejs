<%- include('./partials/head', { title: "Images" }) %>
  <main>
    <section class="slideshow">
      <div class="slideshow--content">
        <% if (images.length) { %>
          <% images.map((image, index) => { %>
            <figure class="slideshow--content__figure">
              <img 
                src="data:image/<%=image.img.contentType%>;base64, <%=image.img.data.toString('base64')%>"
                alt="<%= image.desc %>"
                class="slideshow--content__figure__image"
              />
              <figcaption class="slideshow--content__figure__description">
                <%= `${index+1}/${images.length}` %>
              </figcaption>
            </figure>
          <% }) %>
      </div>
      <button id="prev">&#10094;</button>
      <button id="next">&#10095;</button>
      <% } else { %>
        <h3>You don't have any images yet.</h3>
        <a href="/upload">Upload Image</a>
      <% } %>
    </section>
    <a 
      href="/upload"
      class="button--add"
      title="Add"
      aria-label="Add"
    >
      <svg viewBox="0 0 24 24">
        <path d="M0 0h24v24H0z" />
        <line x1="12" y1="5" x2="12" y2="19" />
        <line x1="5" y1="12" x2="19" y2="12" />
      </svg>
    </a>
  </main>
<%- include('./partials/foot') %>