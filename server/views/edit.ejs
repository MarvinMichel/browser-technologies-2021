<%- include('./partials/head', { title: "Edit" }) %>
<main>
  <form method="POST" class="edit">
    <fieldset>
      <input
        type="text"
        name="name"
        class="edit--title"
        id="name"
        value="<%= image.name %>"
      >
      <figure class="edit--photo">
        <img 
          src="data:image/<%=image.img.contentType%>;base64, <%=image.img.data.toString('base64')%>"
          alt="<%= image.description %>"
        >
      </figure>
    </fieldset>
    <fieldset>
      <textarea
        name="desc"
        id="desc"
        class="edit--desc"
      ><%= image.description %></textarea>
      <button
        type="submit"
        class="edit--button__save"
      >Save changes</button>
    </fieldset>
    <button
      type="submit"
      aria-label="Remove image"
      class="edit--button__remove"
      formaction="<%= image._id %>/remove"
    >
      <svg viewBox="0 0 24 24">
        <path d="M0 0h24v24H0z" />
        <line x1="4" y1="7" x2="20" y2="7" />
        <line x1="10" y1="11" x2="10" y2="17" />
        <line x1="14" y1="11" x2="14" y2="17" />
        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
      </svg>
    </button>
  </form>
</main>
<%- include('./partials/foot') %>